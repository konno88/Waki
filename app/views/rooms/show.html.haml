.container
  .chats
    .chat
      - if @messages.present?
        - @messages.each do |m|
          = m.content
  .posts
    = form_with model: @message, url: messages_path, local: true do |f|
      = f.text_field :content, placeholder: 'メッセージを入力', class: 'chats_form_content'
      = f.hidden_field :room_id, value: @room.id
      = f.submit '送信', class: 'chats_form_submit'
        
